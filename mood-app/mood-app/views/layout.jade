html
  head
    title Mood tracker
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(src='bower_components/angular/angular.js')
    script(src='bower_components/angular-resource/angular-resource.js')
    script(src='bower_components/angular-ui-router/release/angular-ui-router.js')
    script(src='bower_components/oclazyload/dist/ocLazyLoad.js')
    script(src='bower_components/angular-loading-bar/build/loading-bar.js')
    script(src='bower_components/angular-cookies/angular-cookies.js')
    script(src='bower_components/angular-sanitize/angular-sanitize.js')
    script(src='bower_components/d3/d3.min.js')
    script(src='bower_components/tinycolor/tinycolor.js')
    script(src='bower_components/lodash/lodash.js')
    script(src='bower_components/angular-mood/angular-mood.js')
    script(src='js/app.js')
    //if lte IE 8
      script(src='public/assets/js/html5shiv.js')
    link(rel='stylesheet', href='assets/css/main.css')
    link(rel='stylesheet', href='bower_components/angular-mood/angular-mood.css')
    //if lte IE 9
      link(rel='stylesheet', href='public/assets/css/ie9.css')
    //if lte IE 8
      link(rel='stylesheet', href='public/assets/css/ie8.css')
    noscript
      link(rel='stylesheet', href='assets/css/noscript.css')
  body(ng-app='mood-app')
    // Wrapper
    #wrapper
      // Main
      section#main
        header
          span.avatar
            img(src='images/mood_tracker.png', alt='')
          h1 Mood tracker
          block content
          footer
            h2 Login with:
            ul.icons
              li
                a.fa-twitter(href='#') Twitter
              li
                a.fa-facebook(href='#') Facebook
      // Footer
      footer#footer
    // Scripts
    //if lte IE 8
      script(src='public/assets/js/respond.min.js')